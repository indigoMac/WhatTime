# Production Environment Configuration
# Copy this to .env in production and fill in actual values

# Application
NODE_ENV=production
API_PORT=8000
FRONTEND_URL=https://your-domain.com

# Database
DATABASE_URL=postgresql://username:password@host:port/database
POSTGRES_DB=whattime_prod
POSTGRES_USER=whattime_user
POSTGRES_PASSWORD=your_secure_password

# Redis (for session management and caching)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Microsoft Graph API
MICROSOFT_CLIENT_ID=your_microsoft_app_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_app_client_secret
MICROSOFT_TENANT_ID=your_microsoft_tenant_id

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_app_password

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGINS=https://your-domain.com,https://outlook.office.com

# Features
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_CALENDAR_INTEGRATION=true
ENABLE_ANALYTICS=true 